<%- include("partials/header.ejs") -%>
<!-- PAGE CONTENT! -->
<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
  <!-- First Photo Grid-->
  <div class="w3-row-padding w3-padding-16 w3-center" id="books">
    <% books.forEach(book => { %>
    <div class="w3-quarter">
      <img src="/images/bookTitles/<%= book.image %>" alt="<%= book.name %>" class="bookCovers"></img>
      <h3>"<%= book.name %>"</h3>
      <h2>By <%= book.author %></h2>
      <p class="bkd"><%= book.description %></p>
      <p><a href="/info/<%= book.id %>" class="bookLink">Book info</a></p>
    </div>
    <% }); %>
  </div>
</div>
<!-- Footer -->
<%- include("partials/footer.ejs") -%>